<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FitFinance" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorSurfaceContainer">@color/fit_finance_card_bg</item>
        <item name="popupMenuBackground">@drawable/bg_menu</item>
        <item name="colorPrimaryDark">@color/fit_finance_card_bg</item>
        <item name="android:navigationBarColor">@color/bg_navbar</item>
